<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/appBackground"
    android:layout_height="match_parent"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/actType"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#003399"
            android:textColor="@color/common_google_signin_btn_text_dark"/>

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actType"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/upload_images"/>

            <EditText
                android:id="@+id/headerText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="@string/eventHeader"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/summaryText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:hint="@string/eventSummary"
                android:singleLine="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/background_multicolor"
            android:weightSum="1"
            android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:id="@+id/saveBtn"
                    android:background="@color/clr_btn_save"
                    android:layout_weight=".5"
                    android:text="@string/save"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:id="@+id/clearBtn"
                    android:background="@color/clr_btn_clear"
                    android:layout_weight=".5"
                    android:text="@string/btn_clear1"/>





        </LinearLayout>
    </RelativeLayout>
</LinearLayout>