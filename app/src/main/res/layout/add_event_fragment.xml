<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/actType"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="#003399"
        android:textColor="@color/common_google_signin_btn_text_dark"/>





    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/actType"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/upload_images"/>

    <EditText
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/eventHeader" />

    <EditText
        android:id="@+id/summaryText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:hint="@string/eventSummary"
        android:singleLine="false" />

        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:id="@+id/saveBtn"
                android:background="@color/clr_btn_save"
                android:layout_weight=".4"
                android:text="@string/save"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/wallet_bright_foreground_holo_dark"
                android:id="@+id/clearBtn"
                android:layout_marginLeft="3dp"
                android:background="@color/clr_btn_clear"
                android:layout_weight=".4"
                android:text="@string/btn_clear1"/>




        </LinearLayout>
    </LinearLayout>
</RelativeLayout>