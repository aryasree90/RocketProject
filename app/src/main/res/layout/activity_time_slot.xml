<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/txt_add_new_game"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"/>


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/selectGameType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/game_type"
        android:layout_margin="5dp"
        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />

    <Button
        android:id="@+id/selectDateTime"
        android:layout_margin="20dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:text="@string/date_time"/>

    <Button
        android:id="@+id/confirmTime"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/clr_btn_save"
        android:text="@string/confirm_time"/>

</LinearLayout>