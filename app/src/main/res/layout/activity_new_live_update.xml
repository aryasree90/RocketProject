<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/appBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/txt_add_transaction_heading"
        android:text="@string/add_new_live_updates"
        android:textSize="18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:background="#003399"
        android:textColor="@color/common_google_signin_btn_text_dark"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_google_signin_btn_text_dark_pressed">
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/updateType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/live_update_type"
        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/updt_det_layout">
    <EditText
        android:id="@+id/updateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:hint="@string/update_header"/>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/gameType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/game_type"
        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />

    <EditText
        android:id="@+id/updateText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:hint="@string/update_text"/>

    <EditText
        android:id="@+id/updateText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/update_text"/>

    <EditText
        android:id="@+id/updateText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/update_text"/>

    <EditText
        android:id="@+id/updateComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:hint="@string/update_comments"/>

</LinearLayout>


    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/background_multicolor"
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:id="@+id/saveBtn"
            android:background="@color/clr_btn_save"
            android:layout_weight=".5"
            android:text="@string/save"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:id="@+id/clearBtn"
            android:background="@color/clr_btn_clear"
            android:layout_weight=".5"
            android:text="@string/btn_clear1"/>





    </LinearLayout>

</LinearLayout>
</LinearLayout>