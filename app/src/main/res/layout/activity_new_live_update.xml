<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txt_add_transaction_heading"
        android:text="@string/add_new_live_updates"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textAlignment="center"
        android:background="#003399"
        android:textColor="@color/common_google_signin_btn_text_dark"/>


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/updateType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/live_update_type"
        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />

    <EditText
        android:id="@+id/updateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/update_header"/>

    <EditText
        android:id="@+id/updateText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/update_text"/>

    <EditText
        android:id="@+id/updateText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/update_text"/>

    <EditText
        android:id="@+id/updateText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/update_text"/>

    <EditText
        android:id="@+id/updateComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:hint="@string/update_comments"/>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:weightSum="1"
        android:id="@+id/btnLayout"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:id="@+id/saveBtn"
            android:background="@color/clr_btn_save"
            android:layout_weight=".4"
            android:text="@string/save"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:id="@+id/clearBtn"
            android:layout_marginLeft="3dp"
            android:background="@color/clr_btn_clear"
            android:layout_weight=".4"
            android:text="@string/btn_clear1"/>



    </LinearLayout>

</LinearLayout>