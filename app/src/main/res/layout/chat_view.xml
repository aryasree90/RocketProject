<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/received_msg_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Sender Name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/recv_bubble">

            <TextView
                android:id="@+id/chat_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat message comes here"/>
            <View
                android:layout_width="match_parent"
                android:layout_height=".2dp"
                android:background="@android:color/darker_gray"/>



            <TextView
                android:id="@+id/sender_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:textColor="@color/common_plus_signin_btn_text_light"
                android:textStyle="italic"
                android:text="00:00"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sent_msg_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginLeft="60dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/send_bubble">

            <TextView
                android:id="@+id/sent_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat message comes here"/>
            <View
                android:layout_width="match_parent"
                android:layout_height=".2dp"
                android:background="@android:color/darker_gray"/>


            <TextView
                android:id="@+id/sent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="10dp"
                android:textColor="@color/common_plus_signin_btn_text_light"
                android:text="00:00"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>